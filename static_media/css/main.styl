naranja=#CB6830
cafe=#453021
blanco=#FFFFFF
cafeclaro=#6d4b35


body
	margin 0
	font-size 16px
	background url(../img/light_grey.png)
	font-family 'Roboto', sans-serif

/*!Mixins*/
redondeado()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	-o-border-radius arguments
	border-radius arguments
  
sombras()
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	-o-border-radius arguments
	box-shadow arguments


/***********Inicio de header***************/

   
.encabezado
	background naranja

.encabezado .row
	margin-right 0px !important

.encabezado h4
	color blanco
	margin-left 50px
	vertical-align middle
	margin-top 20px
	margin-bottom 20px


.btn-sesion
	margin-top 14px
	margin-bottom 20px

a.sesion
	padding-right 30px
	font-size 18px
	color blanco
	text-decoration none


/*Inicio de menu*/

.navbar-brand 
	margin-left 50px
	padding 12px 15px

.navbar-brand>img 
	width 120%


.navbar-default
	background-color cafe
	redondeado 0px
	border none

.nav>li 
	text-align center

.navbar-default .navbar-nav>li>a 
	color white
	padding 20px 30px
	margin-right 40px

.navbar-default .navbar-nav>li>a:hover,.navbar-default .navbar-nav>li>a:focus
	color white 
	


.navbar-default .navbar-nav>.active>a,.navbar-default .navbar-nav>.active>a:focus, .navbar-default .navbar-nav>.active>a:hover 
	color blanco
	font-weight bold
	background-color cafeclaro
	border-bottom 3px solid blanco



